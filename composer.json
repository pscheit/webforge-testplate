{
    "name": "webforge/testplate",
    "description": "Testplate for webforge for base testcases",
    "license": "MIT",
    "authors": [
        {
            "name": "Philipp Scheit",
            "email": "p.scheit@ps-webforge.com"
        }
    ],
    "minimum-stability": "dev",
    "require": {
        "webforge/common": ">=1.1@dev"
    },
    "require-dev": {
        "webforge/translation": "1.1.*@dev",
        "webforge/webforge": "1.4.*@dev",
        "guzzle/guzzle": "3.5.*"
    },
    "suggest": {
        "guzzle/guzzle": "Needed for the GuzzleTester",
        "mockery/mockery": "Better replacement for PHPUnits mock library",
        "webforge/dom": "If you want to use the css() tests in your unit tests for html"
    },
    "autoload": {
        "psr-0": {
            "Webforge\\Code\\Test": ["lib/", "tests/"]
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.4.x-dev"
        }
    }
}
